Parser::Parser* Game::parser = new Parser::Parser();
Room::Room* Game::currentRoom;

Game::Game()
{
  Game::createRooms();
  Inventory::Inventory* Game::inventory = new Inventory::Inventory();
  Game::winNum = 0;
}

void Game::createRooms()
{
  //Create the rooms

  //Rooms
  Game::rooms.push_back(new Room("where I sleep"));
  Game::rooms.push_back(new Room("where it's a hallway")
  Game::rooms.push_back(new Room("where it's pink")
  Game::rooms.push_back(new Room("where my parents sleep")
  Room::Room* parentBathroom = Room("where my parents bathe")
  Room::Room* parentClosetRoom = Room("where it's a closet")
  Room::Room* laundryRoom = Room("where it has a big sink")
  Room::Room* waterHeaterRoom = Room("where it's kinda scary here")
  Room::Room* upstairsBathroom = Room("where my sister's side is messy")
  Room::Room* officeRoom = Room("where it's not my office")
  Room::Room* bonusRoom = Room("where it gets hot in here")
  Room::Room* kitchenRoom = Room("where it's food")
  Room::Room* livingRoom = Room("where we live")
  Room::Room* downstairsBathroom =  Room("where I use it sometimes")
  Room::Room* guestBedroom = Room("where I don't use it sometimes")
  Room::Room* foyerRoom = Room("in the foyer I guess")
  Room::Room* diningRoom = Room("eat here")
  Room::Room* garageRoom = Room("where the popsicles are")
  Room::Room* wineRoom = Room("... well, what do you think is here")

        #Set exits
        myRoom.setExit("Hallway Room", hallwayRoom)

        hallwayRoom.setExit("My Room", myRoom)
        hallwayRoom.setExit("Sister's Room", sisterRoom)
        hallwayRoom.setExit("Parent's Room", parentRoom)
        hallwayRoom.setExit("Laundry Room", laundryRoom)
        hallwayRoom.setExit("Upstairs Bathroom", upstairsBathroom)
        hallwayRoom.setExit("Office Room", officeRoom)
        hallwayRoom.setExit("Bonus Room", bonusRoom)
        hallwayRoom.setExit("Kitchen Room", kitchenRoom)

        sisterRoom.setExit("Hallway Room", hallwayRoom)

        parentRoom.setExit("Hallway Room", hallwayRoom)
        parentRoom.setExit("Parent's Bathroom", parentBathroom)

        parentBathroom.setExit("Parent's Room", parentRoom)
        parentBathroom.setExit("Parent's Closet Room", parentClosetRoom)

        parentClosetRoom.setExit("Parent's Bathroom", parentBathroom)

        laundryRoom.setExit("Hallway Room", hallwayRoom)
        laundryRoom.setExit("Water Heater Room", waterHeaterRoom)

        waterHeaterRoom.setExit("Laundry Room", laundryRoom)

        upstairsBathroom.setExit("Hallway Room", hallwayRoom)

        officeRoom.setExit("Hallway Room", hallwayRoom)

        bonusRoom.setExit("Hallway Room", hallwayRoom)

        kitchenRoom.setExit("Hallway Room", hallwayRoom)
        kitchenRoom.setExit("Living Room", livingRoom)
        kitchenRoom.setExit("Dining Room", diningRoom)
        kitchenRoom.setExit("Foyer Room", foyerRoom)

        livingRoom.setExit("Kitchen Room", kitchenRoom)
        livingRoom.setExit("Wine Room", wineRoom)
        livingRoom.setExit("Downstairs Bathroom", downstairsBathroom)
        livingRoom.setExit("Guest Bedroom", guestBedroom)

        downstairsBathroom.setExit("Living Room", livingRoom)

        guestBedroom.setExit("Living Room", livingRoom)

        wineRoom.setExit("Living Room", livingRoom)

        diningRoom.setExit("Kitchen Room", kitchenRoom)
        diningRoom.setExit("Foyer Room", foyerRoom)

        foyerRoom.setExit("Kitchen Room", kitchenRoom)
        foyerRoom.setExit("Garage Room", garageRoom)
        foyerRoom.setExit("Dining Room", diningRoom)

        garageRoom.setExit("Foyer Room", foyerRoom)

        #Add Items
        myRoom.addItem("Food Note",
                       "You need to get some food:\n1. Gouda Cheese Bites\n2. Brie\n3. Popsicles\nAnd return to your room.",
                       myRoom,
                       "You have successfully gathered the snacks!\nYou win!")
        hallwayRoom.addItem("Kamala Harris",
                            "A cardboard standee of Kamala Harris.\nAdorned with a rainbow inflatable crown,\ngreen gummy bear chains, \nand a hawaiian shirt.",
                            None,
                            None)
        garageRoom.addItem("Popsicles",
                           "They are of flavor pineapple.",
                           myRoom,
                           "Oops, got some on the floor.")
        kitchenRoom.addItem("Gouda Cheese Bites",
                            "There must be something other than cheese in this, I'm addicted.",
                            myRoom,
                            "That was delicious.")
        kitchenRoom.addItem("Brie",
                            "A very good melting cheese, enjoy with bread.",
                            myRoom,
                            "That was delicious.")
  
